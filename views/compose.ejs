<%- include("partials/header"); -%>
<h1>Compose </h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label for="composeTitle">Title</label>
      <input class="form-control" id="composeTitle" type="text" name="blogTitle" >
  </div>
  <div class="form-group">
    <label for="composeBlog">Content:</label>
  <textarea class="form-control" id="composeBlog" name="blogBody" rows="4" cols="100"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Publish</button>
</form>
<%- include("partials/footer"); -%>
